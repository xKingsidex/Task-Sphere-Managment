{% extends 'base.html.twig' %}

{% block title %}{{ issue.summary }}{% endblock %}

{% block body %}
    <div class="container mt-3">

        {% include 'breadcrumb.html.twig' with { breadcrumbs: ['Tickets', issue.id] } %}

        <div class="row">
            
            <div class="col-md-8 col-sm-12">
                {{ component('Issue', {
                    attachments: issue.attachments.toArray,
                    issue: issue
                }) }}
            </div>
            
            <div class="col-md-4 col-sm-12">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        {{ component('SelectIssueType', {
                            issue: issue,
                            types: types,
                            type: issue.type
                        }) }}
                    </div>
                    <div class="col-md-6 col-sm-12">
                        {{ component('SelectIssueStatus', {
                            issue: issue,
                            statuses: statuses,
                            status: issue.status
                        }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="card">
                            <div class="card-header">Details</div>
                            <div class="card-body">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody class="align-middle">
                                    <tr>
                                        <td class="fw-bold">
                                            <small>Assignee</small>
                                        </td>
                                        <td>
                                            {{ component('SelectAssignee', {
                                                assignee: issue.assignee,
                                                issue: issue,
                                                people: people
                                            }) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <small>Story point estimate</small>
                                        </td>
                                        <td>
                                            {{ component('InputStoryPointEstimate', {
                                                issue: issue
                                            }) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="fw-bold">
                                            <small>Reporter</small>
                                        </td>
                                        <td>
                                            {{ component('SelectReporter', {
                                                issue: issue,
                                                people: people,
                                                reporter: issue.reporter
                                            }) }}
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}