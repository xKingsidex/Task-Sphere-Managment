<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>S'inscrire - TaskSphere</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>
    <main class="container mt-3">
        {{ form_start(form, { 'attr': { 'class': 'row justify-content-center' }}) }}
            <div class="col-md-6 col-sm-12 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h3 mb-3 fw-bold text-center">S'inscrire</h1>

                        <div class="form-floating mb-3">
                            {{ form_widget(form.email) }}
                            {{ form_label(form.email) }}
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(form.password.first) }}
                            {{ form_label(form.password.first) }}
                        </div>

                        <div class="form-floating mb-3">
                            {{ form_widget(form.password.second) }}
                            {{ form_label(form.password.second) }}
                        </div>

                        <input type="hidden" id="csrf_token" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

                        {{ form_widget(form.submit) }}
                        <p class="mt-3 mb-3 text-muted">
                            Vous avez déjà un compte ?&nbsp;
                            <a class="text-decoration-none" href="{{ path('security_login') }}">Se connecter</a>
                        </p>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </main>
</body>
</html>
